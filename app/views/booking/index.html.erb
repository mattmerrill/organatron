<div id="Intro" class="container active">
  <div class="row" id="LogoRow">
    <img alt="meetme" src="../assets/logo.svg" id="Logo">
  </div>

  <div class="row">
    <h2 class="col-sm-10 col-sm-offset-1">Rooms for:</h2>
  </div>

  <div class="form-horizontal" role="form">
    <div class="form-group">
      <div class="col-sm-12">
        <input id="Subject" class="form-control" placeholder="Why are you meeting? (e-mail subject)">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-6">
        <input id="Date" class="form-control" placeholder="Select Date">
      </div>
      <div class="col-sm-6">
        <input id="Duration" class="form-control" placeholder="Duration in Minutes">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <input class="form-control attendee" placeholder="Add Attendee">
      </div>
    </div>
  </div>
  <div class="row">
    <h3 class="col-sm-10 col-sm-offset-1">Have a specific time in mind? Choose below</h3>
  </div>
  <div class="row">
    <input placeholder="8:00am" class="form-control" id="SpecificTime">
  </div>
  <button class="btn btn-default col-sm-6 col-sm-offset-3" id="Search">Search Rooms</button>
</div>

<div id="Results" class="container passive">
  <div class="row">

  </div>
</div>

<div class="modal fade" id="bookModal" tabindex="-1" role="dialog" aria-labelledby="bookModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <h1>You have booked <span class="roomName"></span></h1>
        <div class="row">
          <img src="" class="roomInfo col-sm-6">
          <div class="roomInfo col-sm-6">
            <p>Subject: <span class="subject"></span></p>
            <p>Date: <span class="date"></span></p>
            <p>Time: <span class="time"></span></p>
            <p>Room: <span class="room_number"></span></p>
          </div>
        </div>
        <h1>Invited Attendees</h1>
        <div class="row attendees">
        </div>
        <div class="row">
          <button id="CloseBookingModal" class="col-sm-4 col-sm-offset-4 btn btn-default">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
